generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  ADMIN
}

enum PaymentMethod {
  COD
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELLED
}

enum ProductType {
  SIMPLE
  VARIABLE
}

enum DiscountType {
  PERCENTAGE
  FIXED
}

enum DiscountScope {
  SITE_WIDE
  PRODUCT
  VARIANT
  CATEGORY
  COLLECTION
}

enum ShippingType {
  STANDARD
  EXPRESS
  FREE
}

enum ShippingScope {
  COUNTRY
  STATE
  CITY
}

enum ShippingConditionType {
  NONE
  MIN_ORDER_VALUE
  WEIGHT_RANGE
  DIMENSION_RANGE
}

model User {
  id        String    @id @default(cuid())
  name      String
  firstName String    @default("")
  lastName  String?
  email     String    @unique
  password  String
  role      UserRole  @default(USER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  orders            Order[]
  sessions          Session[]
  carts             Cart[]
  addresses         Address[]
  couponRedemptions CouponRedemption[]

  @@index([role])
}

model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  slug        String    @unique
  description String?
  parentId    String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  parent             Category? @relation("CategoryHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children           Category[] @relation("CategoryHierarchy")
  products           Product[]
  discountCategories DiscountCategories[]

  @@index([parentId])
}

model Product {
  id              String      @id @default(cuid())
  name            String
  slug            String      @unique
  description     String?
  type            ProductType @default(SIMPLE)
  imageUrl        String
  imageFileId     String?
  imageFilePath   String?
  imageFolderPath String?
  thumbUrl        String?
  thumbFileId     String?
  thumbFilePath   String?
  categoryId      String
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  category         Category             @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  orderItems       OrderItem[]
  galleryImages    ProductGalleryImage[]
  variants         ProductVariant[]
  cartItems        CartItem[]
  discountProducts DiscountProducts[]

  @@index([categoryId])
  @@index([type])
}

model ProductVariant {
  id        String   @id @default(cuid())
  productId String
  sku       String   @unique
  price     Int      // stored in cents
  stock     Int      @default(0)
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product          Product                @relation(fields: [productId], references: [id], onDelete: Cascade)
  attributes       ProductVariantAttribute[]
  cartItems        CartItem[]
  discountVariants DiscountVariants[]

  @@index([productId])
  @@index([sku])
}

model ProductVariantAttribute {
  id        String   @id @default(cuid())
  variantId String
  name      String   // e.g., "Weight", "Size", "Color"
  value     String   // e.g., "500g", "Large", "Red"
  createdAt DateTime @default(now())

  variant   ProductVariant @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@unique([variantId, name])
  @@index([variantId])
}

model ProductGalleryImage {
  id          String   @id @default(cuid())
  productId   String
  index       Int
  url         String
  fileId      String
  filePath    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, index])
  @@index([productId])
}

model Order {
  id              String        @id @default(cuid())
  userId          String
  // stored in cents
  totalAmount     Int
  shippingCost    Int           @default(0)
  shippingMethodId String?
  paymentMethod   PaymentMethod @default(COD)
  status          OrderStatus   @default(PENDING)
  customerName    String
  customerPhone   String
  shippingAddress String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  user              User               @relation(fields: [userId], references: [id], onDelete: Restrict)
  items             OrderItem[]
  couponRedemptions CouponRedemption[]
  shippingMethod    ShippingMethod?    @relation(fields: [shippingMethodId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model OrderItem {
  id              String  @id @default(cuid())
  orderId         String
  productId       String
  variantId       String? // null for old orders before variations
  sku             String
  quantity        Int
  // stored in cents (snapshot at purchase time)
  price           Int
  // snapshot of variant attributes at purchase time (JSON)
  variantSnapshot String? // e.g., {"Weight": "500g", "Size": "Large"}

  order           Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product         Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([orderId])
  @@index([productId])
  @@index([variantId])
}

model Session {
  id               String    @id @default(cuid())
  userId           String
  refreshTokenHash String
  userAgent        String?
  ip               String?
  createdAt        DateTime  @default(now())
  expiresAt        DateTime
  revokedAt        DateTime?

  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model Cart {
  id              String   @id @default(cuid())
  userId          String?
  sessionId       String?  @unique
  appliedCouponId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user           User?  @relation(fields: [userId], references: [id], onDelete: Cascade)
  items          CartItem[]
  appliedCoupon  Coupon? @relation(fields: [appliedCouponId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([sessionId])
  @@index([appliedCouponId])
}

model CartItem {
  id            String   @id @default(cuid())
  cartId        String
  productId     String
  variantId     String
  quantity      Int
  priceSnapshot Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  cart     Cart           @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product  Product        @relation(fields: [productId], references: [id], onDelete: Restrict)
  variant  ProductVariant @relation(fields: [variantId], references: [id], onDelete: Restrict)

  @@index([cartId])
  @@index([productId])
  @@index([variantId])
  @@unique([cartId, variantId])
}

model Address {
  id            String   @id @default(cuid())
  userId        String
  fullName      String
  phone         String
  country       String
  state         String
  city          String
  streetAddress String
  postalCode    String?
  isDefault     Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isDefault])
}

model ShippingZone {
  id        String        @id @default(cuid())
  scope     ShippingScope
  country   String?
  state     String?
  city      String?
  isActive  Boolean       @default(true)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  rules     ShippingRule[]

  @@index([scope])
  @@index([country])
  @@index([state])
  @@index([city])
  @@index([isActive])
}

model ShippingMethod {
  id          String        @id @default(cuid())
  type        ShippingType
  name        String
  description String?
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  rules       ShippingRule[]
  orders      Order[]

  @@index([type])
  @@index([isActive])
}

model ShippingRule {
  id             String                 @id @default(cuid())
  zoneId         String
  methodId       String
  conditionType  ShippingConditionType  @default(NONE)
  conditionConfig Json?
  baseCost       Int                    // stored in cents
  priority       Int                    @default(0)
  isActive       Boolean                @default(true)
  createdAt      DateTime               @default(now())
  updatedAt      DateTime               @updatedAt

  zone           ShippingZone           @relation(fields: [zoneId], references: [id], onDelete: Cascade)
  method         ShippingMethod         @relation(fields: [methodId], references: [id], onDelete: Cascade)

  @@index([zoneId])
  @@index([methodId])
  @@index([conditionType])
  @@index([priority])
  @@index([isActive])
  @@unique([zoneId, methodId, conditionType, priority])
}

model Discount {
  id            String        @id @default(cuid())
  name          String
  description   String?
  discountType  DiscountType
  discountValue Int
  startDate     DateTime
  endDate       DateTime
  isActive      Boolean       @default(true)
  priority      Int           @default(0)
  isStackable   Boolean       @default(false)
  scope         DiscountScope
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  products      DiscountProducts[]
  variants      DiscountVariants[]
  categories    DiscountCategories[]
  collections   DiscountCollections[]

  @@index([isActive])
  @@index([startDate])
  @@index([endDate])
  @@index([priority])
  @@index([scope])
}

model DiscountProducts {
  id         String   @id @default(cuid())
  discountId String
  productId  String

  discount   Discount @relation(fields: [discountId], references: [id], onDelete: Cascade)
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([discountId, productId])
  @@index([productId])
  @@index([discountId])
}

model DiscountVariants {
  id         String        @id @default(cuid())
  discountId String
  variantId  String

  discount   Discount      @relation(fields: [discountId], references: [id], onDelete: Cascade)
  variant    ProductVariant @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@unique([discountId, variantId])
  @@index([variantId])
  @@index([discountId])
}

model DiscountCategories {
  id         String   @id @default(cuid())
  discountId String
  categoryId String

  discount   Discount @relation(fields: [discountId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([discountId, categoryId])
  @@index([categoryId])
  @@index([discountId])
}

model Collection {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  discountCollections DiscountCollections[]
}

model DiscountCollections {
  id           String     @id @default(cuid())
  discountId   String
  collectionId String

  discount     Discount   @relation(fields: [discountId], references: [id], onDelete: Cascade)
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)

  @@unique([discountId, collectionId])
  @@index([collectionId])
  @@index([discountId])
}

model Coupon {
  id                     String            @id @default(cuid())
  code                   String            @unique
  description            String?
  discountType           DiscountType
  discountValue          Int
  startDate              DateTime
  endDate                DateTime
  isActive               Boolean           @default(true)
  minimumCartValue       Int?
  maxRedemptions         Int?
  maxRedemptionsPerUser  Int?
  isStackable            Boolean           @default(false)
  createdAt              DateTime          @default(now())
  updatedAt              DateTime          @updatedAt

  redemptions            CouponRedemption[]
  carts                  Cart[]

  @@index([isActive])
  @@index([startDate])
  @@index([endDate])
}

model CouponRedemption {
  id         String   @id @default(cuid())
  couponId   String
  userId     String?
  orderId    String
  redeemedAt DateTime @default(now())

  coupon     Coupon   @relation(fields: [couponId], references: [id], onDelete: Cascade)
  user       User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  order      Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([couponId])
  @@index([userId])
  @@index([orderId])
  @@index([redeemedAt])
}


